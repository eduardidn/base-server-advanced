{
  "name": "finance-personal-manager",
  "version": "1.0.0",
  "description": "FPM backend",
  "main": "index.ts",
  "scripts": {
    "test": "export PORT=3001 && export APP_ENV=test && jest --watch",
    "start": "yarn build && node build/main.js",
    "dev": "nodemon",
    "build": "yarn build:clean && tsc",
    "build:clean": "rimraf build",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint": "eslint . --ext .ts",
    "prettier:fix": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint",
      "pre-push": "yarn lint && yarn build"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "keywords": [
    "api",
    "FMP"
  ],
  "author": "eduardidn",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^7.4.0",
    "@typegoose/typegoose": "^9.8.0",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "axios": "^0.23.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "express": "^4.17.1",
    "firebase": "^9.7.0",
    "helmet": "^4.6.0",
    "jest": "^27.2.5",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.1",
    "mongoose-lean-getters": "^0.3.1",
    "node-forge": "^1.3.1",
    "supertest": "^6.2.4",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.3.0",
    "tsconfig-paths": "^4.0.0",
    "typegoose": "^5.9.1",
    "typescript": "^4.4.4",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/express-fileupload": "^1.1.3",
    "@types/helmet": "^0.0.47",
    "@types/morgan": "^1.9.1",
    "@types/mysql": "^2.15.5",
    "@types/node": "^14.0.27",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mongoose-to-swagger": "^1.4.0",
    "nodemon": "^1.19.1",
    "prettier": "^2.0.5",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.3.0"
  }
}
